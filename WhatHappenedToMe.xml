<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\FrameXML\UI.xsd">
	
	<!-- Main Frame -->
	<Frame name="WhatHappenedToMeFrame" parent="UIParent" movable="true" enableMouse="true" hidden="true" frameStrata="DIALOG" toplevel="true">
		<Size>
			<AbsDimension x="550" y="450"/>
		</Size>
		<Anchors>
			<Anchor point="CENTER"/>
		</Anchors>
		
		<Backdrop bgFile="Interface\TutorialFrame\TutorialFrameBackground" edgeFile="Interface\Tooltips\UI-Tooltip-Border" tile="true">
			<BackgroundInsets>
				<AbsInset left="5" right="5" top="5" bottom="5"/>
			</BackgroundInsets>
			<TileSize>
				<AbsValue val="16"/>
			</TileSize>
			<EdgeSize>
				<AbsValue val="16"/>
			</EdgeSize>
			<Color r="0" g="0" b="0" a="0.9"/>
		</Backdrop>
		
		<Layers>
			<Layer level="ARTWORK">
				<FontString name="$parentTitle" inherits="GameFontNormalLarge" text="What Happened To Me">
					<Anchors>
						<Anchor point="TOP">
							<Offset>
								<AbsDimension x="0" y="-10"/>
							</Offset>
						</Anchor>
					</Anchors>
					<Color r="1.0" g="0.82" b="0.0"/>
				</FontString>
			</Layer>
		</Layers>
		
		<Frames>
			<!-- Close Button -->
			<Button name="$parentCloseButton" inherits="UIPanelCloseButton">
				<Anchors>
					<Anchor point="TOPRIGHT">
						<Offset>
							<AbsDimension x="-5" y="-5"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						WhatHappenedToMeFrame:Hide()
					</OnClick>
				</Scripts>
			</Button>
			
			<!-- Toolbar Row -->
			<Frame name="$parentToolbar">
				<Size>
					<AbsDimension x="530" y="28"/>
				</Size>
				<Anchors>
					<Anchor point="TOP">
						<Offset>
							<AbsDimension x="0" y="-28"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Frames>
					<!-- Death Selection Dropdown (Left) -->
					<Frame name="$parentDeathDropDown" inherits="UIDropDownMenuTemplate">
						<Anchors>
							<Anchor point="LEFT">
								<Offset>
									<AbsDimension x="-10" y="2"/>
								</Offset>
							</Anchor>
						</Anchors>
					</Frame>
					
					<!-- Relative Time Checkbox (Center) -->
					<CheckButton name="$parentRelativeTimeCheck">
						<Size>
							<AbsDimension x="24" y="24"/>
						</Size>
						<Anchors>
							<Anchor point="CENTER">
								<Offset>
									<AbsDimension x="-50" y="0"/>
								</Offset>
							</Anchor>
						</Anchors>
						<NormalTexture file="Interface\Buttons\UI-CheckBox-Up"/>
						<PushedTexture file="Interface\Buttons\UI-CheckBox-Down"/>
						<HighlightTexture file="Interface\Buttons\UI-CheckBox-Highlight" alphaMode="ADD"/>
						<CheckedTexture file="Interface\Buttons\UI-CheckBox-Check"/>
						<Scripts>
							<OnClick>
								WhatHappenedToMeDB.relativeToLastEvent = this:GetChecked()
								WHTM:UpdateDisplay()
							</OnClick>
							<OnShow>
								this:SetChecked(WhatHappenedToMeDB.relativeToLastEvent)
							</OnShow>
						</Scripts>
					</CheckButton>
					
					<!-- Checkbox Label -->
					<Frame name="$parentRelativeTimeLabel">
						<Size>
							<AbsDimension x="100" y="24"/>
						</Size>
						<Anchors>
							<Anchor point="CENTER">
								<Offset>
									<AbsDimension x="25" y="0"/>
								</Offset>
							</Anchor>
						</Anchors>
						<Layers>
							<Layer level="ARTWORK">
								<FontString inherits="GameFontNormalSmall" justifyH="LEFT" text="Relative time">
									<Anchors>
										<Anchor point="LEFT"/>
									</Anchors>
								</FontString>
							</Layer>
						</Layers>
					</Frame>
					
					<!-- Export Button (Right) -->
					<Button name="$parentExportButton" inherits="UIPanelButtonTemplate" text="Export">
						<Size>
							<AbsDimension x="70" y="22"/>
						</Size>
						<Anchors>
							<Anchor point="RIGHT">
								<Offset>
									<AbsDimension x="-5" y="0"/>
								</Offset>
							</Anchor>
						</Anchors>
						<Scripts>
							<OnClick>
								WHTM:ShowExportDialog()
							</OnClick>
						</Scripts>
					</Button>
				</Frames>
			</Frame>
			
			<!-- Scroll Frame -->
			<ScrollFrame name="$parentScrollFrame" inherits="UIPanelScrollFrameTemplate">
				<Size>
					<AbsDimension x="500" y="380"/>
				</Size>
				<Anchors>
					<Anchor point="TOP">
						<Offset>
							<AbsDimension x="-10" y="-60"/>
						</Offset>
					</Anchor>
				</Anchors>
				<ScrollChild>
					<Frame name="$parentScrollChildFrame">
						<Size>
							<AbsDimension x="480" y="350"/>
						</Size>
						<Layers>
							<Layer level="ARTWORK">
								<FontString name="$parentText" inherits="GameFontHighlightSmall" justifyH="LEFT" justifyV="TOP" nonspacewrap="false">
									<Size>
										<AbsDimension x="480" y="0"/>
									</Size>
									<Anchors>
										<Anchor point="TOPLEFT">
											<Offset>
												<AbsDimension x="8" y="0"/>
											</Offset>
										</Anchor>
									</Anchors>
								</FontString>
							</Layer>
						</Layers>
					</Frame>
				</ScrollChild>
			</ScrollFrame>
		</Frames>
		
		<Scripts>
			<OnLoad>
				this:RegisterForDrag("LeftButton")
				this:RegisterEvent("PLAYER_ENTERING_WORLD")
			</OnLoad>
			<OnDragStart>
				this:StartMoving()
			</OnDragStart>
			<OnDragStop>
				this:StopMovingOrSizing()
			</OnDragStop>
			<OnEvent>
				WHTM:OnEvent()
			</OnEvent>
			<OnUpdate>
				WHTM:OnUpdate(arg1)
			</OnUpdate>
			<OnShow>
				local success, err = pcall(function()
					WHTM:UpdateDisplay()
				end)
				if not success then
					DEFAULT_CHAT_FRAME:AddMessage("|cFFFF0000[WHTM Error]|r OnShow: " .. tostring(err))
				end
			</OnShow>
		</Scripts>
	</Frame>
	
	<!-- Export Dialog -->
	<Frame name="WhatHappenedToMeExportDialog" parent="UIParent" movable="true" enableMouse="true" hidden="true" frameStrata="DIALOG" toplevel="true">
		<Size>
			<AbsDimension x="300" y="220"/>
		</Size>
		<Anchors>
			<Anchor point="CENTER"/>
		</Anchors>
		
		<Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" edgeFile="Interface\DialogFrame\UI-DialogBox-Border" tile="true">
			<BackgroundInsets>
				<AbsInset left="11" right="12" top="12" bottom="11"/>
			</BackgroundInsets>
			<TileSize>
				<AbsValue val="32"/>
			</TileSize>
			<EdgeSize>
				<AbsValue val="32"/>
			</EdgeSize>
		</Backdrop>
		
		<Layers>
			<Layer level="ARTWORK">
				<FontString name="$parentTitle" inherits="GameFontNormal" text="Export to Chat">
					<Anchors>
						<Anchor point="TOP">
							<Offset>
								<AbsDimension x="0" y="-15"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
				
				<FontString name="$parentChannelLabel" inherits="GameFontNormalSmall" text="Channel:">
					<Anchors>
						<Anchor point="TOPLEFT">
							<Offset>
								<AbsDimension x="25" y="-45"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
				
				<FontString name="$parentCountLabel" inherits="GameFontNormalSmall" text="Number of events:">
					<Anchors>
						<Anchor point="TOPLEFT">
							<Offset>
								<AbsDimension x="25" y="-95"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
				
				<FontString name="$parentTargetLabel" inherits="GameFontNormalSmall" text="Whisper target:" hidden="true">
					<Anchors>
						<Anchor point="TOPLEFT">
							<Offset>
								<AbsDimension x="25" y="-120"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		
		<Frames>
			<!-- Close Button -->
			<Button name="$parentCloseButton" inherits="UIPanelCloseButton">
				<Anchors>
					<Anchor point="TOPRIGHT">
						<Offset>
							<AbsDimension x="2" y="2"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						this:GetParent():Hide()
					</OnClick>
				</Scripts>
			</Button>
			
			<!-- Channel Dropdown -->
			<Frame name="$parentChannelDropDown" inherits="UIDropDownMenuTemplate">
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset>
							<AbsDimension x="10" y="-55"/>
						</Offset>
					</Anchor>
				</Anchors>
			</Frame>
			
			<!-- Event Count Input -->
			<EditBox name="$parentCountInput" inherits="InputBoxTemplate" numeric="true" autoFocus="false">
				<Size>
					<AbsDimension x="80" y="32"/>
				</Size>
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset>
							<AbsDimension x="145" y="-88"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>
						this:SetMaxLetters(3)
						this:SetText("5")
					</OnLoad>
				</Scripts>
			</EditBox>
			
			<!-- Whisper Target Input -->
			<EditBox name="$parentTargetInput" inherits="InputBoxTemplate" autoFocus="false">
				<Size>
					<AbsDimension x="150" y="32"/>
				</Size>
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset>
							<AbsDimension x="130" y="-113"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>
						this:SetMaxLetters(12)
						this:Hide()
					</OnLoad>
				</Scripts>
			</EditBox>
			
			<!-- Send Button -->
			<Button name="$parentSendButton" inherits="UIPanelButtonTemplate" text="Send">
				<Size>
					<AbsDimension x="100" y="22"/>
				</Size>
				<Anchors>
					<Anchor point="BOTTOM">
						<Offset>
							<AbsDimension x="-55" y="20"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						WHTM:ExportToChat()
					</OnClick>
				</Scripts>
			</Button>
			
			<!-- Cancel Button -->
			<Button name="$parentCancelButton" inherits="UIPanelButtonTemplate" text="Cancel">
				<Size>
					<AbsDimension x="100" y="22"/>
				</Size>
				<Anchors>
					<Anchor point="BOTTOM">
						<Offset>
							<AbsDimension x="55" y="20"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						this:GetParent():Hide()
					</OnClick>
				</Scripts>
			</Button>
		</Frames>
		
		<Scripts>
			<OnLoad>
				this:RegisterForDrag("LeftButton")
			</OnLoad>
			<OnDragStart>
				this:StartMoving()
			</OnDragStart>
			<OnDragStop>
				this:StopMovingOrSizing()
			</OnDragStop>
		</Scripts>
	</Frame>
	
</Ui>
