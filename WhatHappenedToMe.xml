<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\FrameXML\UI.xsd">
	
	<!-- Main Frame -->
	<Frame name="WhatHappenedToMeFrame" parent="UIParent" movable="true" enableMouse="true" hidden="true" frameStrata="DIALOG" toplevel="true">
		<Size>
			<AbsDimension x="550" y="450"/>
		</Size>
		<Anchors>
			<Anchor point="CENTER"/>
		</Anchors>
		
		<Backdrop bgFile="Interface\TutorialFrame\TutorialFrameBackground" edgeFile="Interface\Tooltips\UI-Tooltip-Border" tile="true">
			<BackgroundInsets>
				<AbsInset left="5" right="5" top="5" bottom="5"/>
			</BackgroundInsets>
			<TileSize>
				<AbsValue val="16"/>
			</TileSize>
			<EdgeSize>
				<AbsValue val="16"/>
			</EdgeSize>
			<Color r="0" g="0" b="0" a="0.9"/>
		</Backdrop>
		
		<Layers>
			<Layer level="ARTWORK">
				<FontString name="$parentTitle" inherits="GameFontNormalLarge" text="What Happened To Me">
					<Anchors>
						<Anchor point="TOP">
							<Offset>
								<AbsDimension x="0" y="-10"/>
							</Offset>
						</Anchor>
					</Anchors>
					<Color r="1.0" g="0.82" b="0.0"/>
				</FontString>
			</Layer>
		</Layers>
		
		<Frames>
			<!-- Close Button -->
			<Button name="$parentCloseButton" inherits="UIPanelCloseButton">
				<Anchors>
					<Anchor point="TOPRIGHT">
						<Offset>
							<AbsDimension x="-5" y="-5"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						WhatHappenedToMeFrame:Hide()
					</OnClick>
				</Scripts>
			</Button>
			
			<!-- Relative Time Checkbox -->
			<CheckButton name="$parentRelativeTimeCheck">
				<Size>
					<AbsDimension x="24" y="24"/>
				</Size>
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset>
							<AbsDimension x="20" y="-30"/>
						</Offset>
					</Anchor>
				</Anchors>
				<NormalTexture file="Interface\Buttons\UI-CheckBox-Up"/>
				<PushedTexture file="Interface\Buttons\UI-CheckBox-Down"/>
				<HighlightTexture file="Interface\Buttons\UI-CheckBox-Highlight" alphaMode="ADD"/>
				<CheckedTexture file="Interface\Buttons\UI-CheckBox-Check"/>
				<Scripts>
					<OnClick>
						WhatHappenedToMeDB.relativeToLastEvent = this:GetChecked()
						WHTM:UpdateDisplay()
					</OnClick>
					<OnShow>
						this:SetChecked(WhatHappenedToMeDB.relativeToLastEvent)
					</OnShow>
				</Scripts>
			</CheckButton>
			
			<!-- Checkbox Label -->
			<Frame name="$parentRelativeTimeLabel">
				<Size>
					<AbsDimension x="150" y="24"/>
				</Size>
				<Anchors>
					<Anchor point="LEFT" relativeTo="$parentRelativeTimeCheck" relativePoint="RIGHT">
						<Offset>
							<AbsDimension x="5" y="0"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Layers>
					<Layer level="ARTWORK">
						<FontString inherits="GameFontNormalSmall" justifyH="LEFT" text="Time to last event">
							<Anchors>
								<Anchor point="LEFT"/>
							</Anchors>
						</FontString>
					</Layer>
				</Layers>
			</Frame>
			
			<!-- Scroll Frame -->
			<ScrollFrame name="$parentScrollFrame" inherits="UIPanelScrollFrameTemplate">
				<Size>
					<AbsDimension x="500" y="375"/>
				</Size>
				<Anchors>
					<Anchor point="TOP">
						<Offset>
							<AbsDimension x="-10" y="-63"/>
						</Offset>
					</Anchor>
				</Anchors>
				<ScrollChild>
					<Frame name="$parentScrollChildFrame">
						<Size>
							<AbsDimension x="480" y="350"/>
						</Size>
						<Layers>
							<Layer level="ARTWORK">
								<FontString name="$parentText" inherits="GameFontHighlightSmall" justifyH="LEFT" justifyV="TOP" nonspacewrap="false">
									<Size>
										<AbsDimension x="480" y="0"/>
									</Size>
									<Anchors>
										<Anchor point="TOPLEFT">
											<Offset>
												<AbsDimension x="8" y="0"/>
											</Offset>
										</Anchor>
									</Anchors>
								</FontString>
							</Layer>
						</Layers>
					</Frame>
				</ScrollChild>
			</ScrollFrame>
		</Frames>
		
		<Scripts>
			<OnLoad>
				this:RegisterForDrag("LeftButton")
				this:RegisterEvent("PLAYER_ENTERING_WORLD")
			</OnLoad>
			<OnDragStart>
				this:StartMoving()
			</OnDragStart>
			<OnDragStop>
				this:StopMovingOrSizing()
			</OnDragStop>
			<OnEvent>
				WHTM:OnEvent()
			</OnEvent>
			<OnUpdate>
				WHTM:OnUpdate(arg1)
			</OnUpdate>
			<OnShow>
				local success, err = pcall(function()
					WHTM:UpdateDisplay()
				end)
				if not success then
					DEFAULT_CHAT_FRAME:AddMessage("|cFFFF0000[WHTM Error]|r OnShow: " .. tostring(err))
				end
			</OnShow>
		</Scripts>
	</Frame>
	
</Ui>
