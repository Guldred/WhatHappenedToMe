<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\FrameXML\UI.xsd">
	
	<!-- Main Frame -->
	<Frame name="WhatHappenedToMeFrame" parent="UIParent" movable="true" enableMouse="true" hidden="true" frameStrata="DIALOG" toplevel="true">
		<Size>
			<AbsDimension x="550" y="450"/>
		</Size>
		<Anchors>
			<Anchor point="CENTER"/>
		</Anchors>
		
		<Backdrop bgFile="Interface\TutorialFrame\TutorialFrameBackground" edgeFile="Interface\Tooltips\UI-Tooltip-Border" tile="true">
			<BackgroundInsets>
				<AbsInset left="5" right="5" top="5" bottom="5"/>
			</BackgroundInsets>
			<TileSize>
				<AbsValue val="16"/>
			</TileSize>
			<EdgeSize>
				<AbsValue val="16"/>
			</EdgeSize>
			<Color r="0" g="0" b="0" a="0.9"/>
		</Backdrop>
		
		<Layers>
			<Layer level="ARTWORK">
				<Texture name="$parentHeaderTexture" file="Interface\DialogFrame\UI-DialogBox-Header">
					<Size>
						<AbsDimension x="300" y="64"/>
					</Size>
					<Anchors>
						<Anchor point="TOP">
							<Offset>
								<AbsDimension x="0" y="12"/>
							</Offset>
						</Anchor>
					</Anchors>
				</Texture>
				<FontString name="$parentTitle" inherits="GameFontNormalLarge" text="What Happened To Me">
					<Anchors>
						<Anchor point="TOP">
							<Offset>
								<AbsDimension x="0" y="-10"/>
							</Offset>
						</Anchor>
					</Anchors>
					<Color r="1.0" g="0.82" b="0.0"/>
				</FontString>
			</Layer>
		</Layers>
		
		<Frames>
			<!-- Close Button -->
			<Button name="$parentCloseButton" inherits="UIPanelCloseButton">
				<Anchors>
					<Anchor point="TOPRIGHT">
						<Offset>
							<AbsDimension x="-5" y="-5"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						WhatHappenedToMeFrame:Hide()
					</OnClick>
				</Scripts>
			</Button>
			
			<!-- Scroll Frame -->
			<ScrollFrame name="$parentScrollFrame" inherits="UIPanelScrollFrameTemplate">
				<Size>
					<AbsDimension x="510" y="350"/>
				</Size>
				<Anchors>
					<Anchor point="TOP">
						<Offset>
							<AbsDimension x="-5" y="-45"/>
						</Offset>
					</Anchor>
				</Anchors>
				<ScrollChild>
					<Frame name="$parentScrollChildFrame">
						<Size>
							<AbsDimension x="485" y="350"/>
						</Size>
						<Layers>
							<Layer level="ARTWORK">
								<FontString name="$parentText" inherits="GameFontHighlightSmall" justifyH="LEFT" justifyV="TOP" nonspacewrap="false">
									<Size>
										<AbsDimension x="485" y="0"/>
									</Size>
									<Anchors>
										<Anchor point="TOPLEFT">
											<Offset>
												<AbsDimension x="5" y="0"/>
											</Offset>
										</Anchor>
									</Anchors>
								</FontString>
							</Layer>
						</Layers>
					</Frame>
				</ScrollChild>
			</ScrollFrame>
			
			<!-- Clear Button -->
			<Button name="$parentClearButton" inherits="UIPanelButtonTemplate" text="Clear Log">
				<Size>
					<AbsDimension x="110" y="24"/>
				</Size>
				<Anchors>
					<Anchor point="BOTTOMLEFT">
						<Offset>
							<AbsDimension x="25" y="12"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						WHTM.buffer:Clear()
						WHTM:UpdateDisplay()
						DEFAULT_CHAT_FRAME:AddMessage("|cFF00FF00What Happened To Me:|r Combat log cleared.")
					</OnClick>
				</Scripts>
			</Button>
			
			<!-- Refresh Button -->
			<Button name="$parentRefreshButton" inherits="UIPanelButtonTemplate" text="Refresh">
				<Size>
					<AbsDimension x="110" y="24"/>
				</Size>
				<Anchors>
					<Anchor point="BOTTOM">
						<Offset>
							<AbsDimension x="0" y="12"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						WHTM:UpdateDisplay()
					</OnClick>
				</Scripts>
			</Button>
			
			<!-- Close Bottom Button -->
			<Button name="$parentCloseBottomButton" inherits="UIPanelButtonTemplate" text="Close">
				<Size>
					<AbsDimension x="110" y="24"/>
				</Size>
				<Anchors>
					<Anchor point="BOTTOMRIGHT">
						<Offset>
							<AbsDimension x="-25" y="12"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						WhatHappenedToMeFrame:Hide()
					</OnClick>
				</Scripts>
			</Button>
		</Frames>
		
		<Scripts>
			<OnLoad>
				this:RegisterForDrag("LeftButton")
				this:RegisterEvent("PLAYER_ENTERING_WORLD")
			</OnLoad>
			<OnDragStart>
				this:StartMoving()
			</OnDragStart>
			<OnDragStop>
				this:StopMovingOrSizing()
			</OnDragStop>
			<OnEvent>
				WHTM:OnEvent()
			</OnEvent>
			<OnUpdate>
				WHTM:OnUpdate(arg1)
			</OnUpdate>
			<OnShow>
				WHTM:UpdateDisplay()
			</OnShow>
		</Scripts>
	</Frame>
	
</Ui>
